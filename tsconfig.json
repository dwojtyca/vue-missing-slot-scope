{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@nuxt/types",
      "@nuxtjs/axios",
      "@types/node",
      "@types/vue-router",
      "vue-apollo/types",
      "@types/jest",
      "types/global/gql.d.ts",
      "types/global/vue-shim.d.ts"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
